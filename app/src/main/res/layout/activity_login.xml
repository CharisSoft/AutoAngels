<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:fitsSystemWindows="true"
        android:layout_margin="20dp"
        >
    </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="25sp"
        android:gravity="center"
        android:textStyle="normal"
        android:textColor="#F1110C">

    </TextView>
    <EditText
        android:id="@+id/username_autoangel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_backgrouond"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:hint="User Name"
        android:textSize="18sp"
        >
    </EditText>
    <EditText
        android:id="@+id/password_autoangel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_backgrouond"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:hint="Password"
        android:textSize="18sp"
        >
    </EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="LOGIN"
            android:layout_gravity="start"
            android:textSize="20sp"
            android:layout_weight="0.1"
            android:drawableLeft="@drawable/login_icon"
            android:background="#17a2b8"
            android:textColor="#FFFFFF">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:background="#dc3545"
            android:text="Forgot password"
            android:textColor="#fff"
            android:textSize="20sp"
            >
        </Button>
    </LinearLayout>
</LinearLayout>